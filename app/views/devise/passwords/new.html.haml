#newPasswordModal.modal.show{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %h1.text-center Forgot your password?
      .modal-body
        = form_for(resource, as: resource_name, url: password_path(resource_name),
                                                html: { method: :post },
                                                class: "form col-md-12 center-block") do |f|
          = devise_error_messages!
          .form-group
            = f.email_field :email, placeholder: "User Email", class: "form-control input-lg", autofocus: true
          .form-group
            = f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block"
            .row
              .col-sm-7
                = render "devise/shared/links"
              .col-sm-5
                = render "devise/shared/social_links"
