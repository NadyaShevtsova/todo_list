#editPasswordModal.modal.show{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %h1.text-center Change your password
      .modal-body
        = form_for(resource, as: resource_name, url: password_path(resource_name),
                                                html: { method: :put },
                                                class: "form col-md-12 center-block") do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          .form-group
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
              %br/
            = f.password_field :password, placeholder: "New password", class: "form-control input-lg", autocomplete: "off"
          .form-group
            = f.password_field :password_confirmation, placeholder: "Password", class: "form-control input-lg", autocomplete: "off"
          .form-group
            = f.submit "Change my password", class: "btn btn-primary btn-lg btn-block"
            .row
              .col-sm-7
                = render "devise/shared/links"
              .col-sm-5
                = render "devise/shared/social_links"
