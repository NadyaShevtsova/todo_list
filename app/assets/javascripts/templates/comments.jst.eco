<div class="comment" id="comment_<%= @comment.id %>">
  <div class="row">
    <div class="col-md-1">
      <div class="glyphicon glyphicon-menu-right"></div>
    </div>
    <div class="col-md-9">
      <%= @comment.comment %>
    </div>
    <div class="col-md-2">
      <span>
        <a href="/comments/<%= @comment.id %>" class="delete-comment-js"><div class="glyphicon glyphicon-trash"></div>
        </a>
      </span>
    </div>
  </div>
</div>
